<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:background="@color/logoHijauDark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/logo"
                    android:visibility="gone"
                    android:id="@+id/tv_lv_riwayat"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Token"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/logoMerah"
                    android:id="@+id/tv_token"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plastik, 5Kg"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@android:color/black"
                    android:id="@+id/tv_jenis_berat"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Petugas"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@android:color/darker_gray"
                    android:id="@+id/tv_nama_petugas"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 Januari 2019"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textSize="10dp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@android:color/darker_gray"
                    android:id="@+id/tv_tgl"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>